<header>
  <nav>

    <div class="logo">
      <span class="logo-p1">kool-kids</span>
      <span class="logo-p2">snax</span>
    </div>

    <div class="nav-bar">

      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" theme-id="theme-switch-btn">
      </div>

      <div class="user" data-user="<%= user_id %>">
        <span class="user-name">
          <%= username %>
        </span>
        <a href="#">
          <i class="fa-solid fa-user-gear"></i>
        </a>


      </div>

      <div class="nav-bar-menu">
        <span class="user-menu-bar">
          <% if (!admin) { %>

              <a href="/order_history">
                <i class="fa-solid fa-receipt"></i>
              </a>
          <% } %>

          <% if (admin) { %>

            <span id="add-new-item-btn">
              <i class="fa-solid fa-bowl-rice"></i>
            </span>

          <% } %>
          <a href="/">
            <i class="fa-solid fa-house-chimney-user"></i>
          </a>
        </span>
      </div>
    </div>

  </nav>

</header>
